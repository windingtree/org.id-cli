{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": [
    "src",
    "test",
    "src/schema/project.json"
  ],
  "exclude": [
    "bin/index.js"
  ]
}
